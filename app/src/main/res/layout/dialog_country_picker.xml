<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        >


        <LinearLayout
            android:id="@+id/layoutLine"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_headingDailogue"
            android:layout_marginBottom="10dp"
            android:background="@drawable/line"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView

            android:id="@+id/txtMessage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutLine"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Invalid Credentials OR Check Account Settings"
            android:textColor="#FF4D4D"
            android:visibility="invisible"

            />


        <TextView
            android:id="@+id/txt_headingDailogue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_marginBottom="10dp"
            android:text="Select Country"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/text_size_4"
            />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/dialog_country_picker_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutLine"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            />


        <View
            android:id="@+id/view"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent" />
    </RelativeLayout>

</LinearLayout>