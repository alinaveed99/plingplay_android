<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    >


    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/App_des"
        android:layout_below="@+id/app_icon"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem Ipsum"
        android:layout_toRightOf="@+id/app_icon"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorTextBlue"
        android:textSize="18sp"
        android:id="@+id/naheader_name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00.00"
        android:layout_toRightOf="@+id/app_icon"
        android:layout_marginTop="4dp"
        android:textColor="@color/colorTextBlack"
        android:textSize="18sp"
        android:layout_below="@+id/naheader_name"
        android:id="@+id/nav_header_currentBalance"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_toRightOf="@+id/nav_header_currentBalance"
        android:layout_marginTop="4dp"
        android:textColor="@color/colorTextBlack"
        android:layout_below="@+id/naheader_name"
        android:layout_marginLeft="3dp"
        android:id="@+id/nav_header_currency"
        />


</RelativeLayout>
