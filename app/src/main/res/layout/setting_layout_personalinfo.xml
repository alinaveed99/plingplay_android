<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/setting_field_padding"
            android:background="#34c0ec"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="8dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="Personal Info"
                android:textColor="@color/md_white_1000"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_firstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/setting_field_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textColor="@color/md_black_1000"
                android:textSize="@dimen/setting_text_size" />

            <TextView
                android:id="@+id/setting_firstName_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/setting_field_spacing"
                android:text="" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/md_blue_grey_300" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_lastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/setting_field_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:textColor="@color/md_black_1000"
                android:textSize="@dimen/setting_text_size" />

            <TextView
                android:id="@+id/setting_lastName_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/setting_field_spacing"
                android:text="" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/md_blue_grey_300" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/setting_field_padding"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="@color/md_black_1000"
                android:textSize="@dimen/setting_text_size" />

            <TextView
                android:id="@+id/setting_phoneNumber_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/setting_field_spacing"
                android:text="" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/md_blue_grey_300" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_addressOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/setting_field_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address One"
                android:textColor="@color/md_black_1000"
                android:textSize="@dimen/setting_text_size" />

            <TextView
                android:id="@+id/setting_addressOne_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/setting_field_spacing"
                android:text="" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/md_blue_grey_300" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_addressTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/setting_field_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address Two"
                android:textColor="@color/md_black_1000"
                android:textSize="@dimen/setting_text_size" />

            <TextView
                android:id="@+id/setting_addressTwo_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/setting_field_spacing"
                android:text="" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/md_blue_grey_300" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/setting_field_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
                android:textColor="@color/md_black_1000"
                android:textSize="@dimen/setting_text_size" />

            <TextView
                android:id="@+id/setting_city_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/setting_field_spacing"
                android:text="" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/md_blue_grey_300" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/setting_field_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country"
                android:textColor="@color/md_black_1000"
                android:textSize="@dimen/setting_text_size" />

            <TextView
                android:id="@+id/setting_country_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/setting_field_spacing"
                android:text="" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/md_blue_grey_300" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/setting_field_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State"
                android:textColor="@color/md_black_1000"
                android:textSize="@dimen/setting_text_size" />

            <TextView
                android:id="@+id/setting_state_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/setting_field_spacing"
                android:text="" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/md_blue_grey_300" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_zipCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/setting_field_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zip Code"
                android:textColor="@color/md_black_1000"
                android:textSize="@dimen/setting_text_size" />

            <TextView
                android:id="@+id/setting_zipCode_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/setting_field_spacing"
                android:text="" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/md_blue_grey_300" />
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>